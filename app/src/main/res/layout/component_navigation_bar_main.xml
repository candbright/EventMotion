<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_component_navigation_bar_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50">

    <ImageView
        android:id="@+id/iv_component_navigation_bar_menu"
        android:layout_width="@dimen/dp_50"
        android:layout_height="match_parent"
        android:src="#eeeeee"
        app:layout_constraintLeft_toLeftOf="@+id/cl_component_navigation_bar_main"
        app:layout_constraintTop_toTopOf="@+id/cl_component_navigation_bar_main" />

    <TextView
        android:id="@+id/tv_component_navigation_bar_title"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:background="#ffffff"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="TITLE"
        android:textColor="#000000"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/iv_component_navigation_bar_menu"
        app:layout_constraintLeft_toRightOf="@+id/iv_component_navigation_bar_menu"
        app:layout_constraintRight_toLeftOf="@+id/iv_component_navigation_bar_search"
        app:layout_constraintTop_toTopOf="@+id/cl_component_navigation_bar_main" />

    <ImageView
        android:id="@+id/iv_component_navigation_bar_search"
        android:layout_width="@dimen/dp_50"
        android:layout_height="match_parent"
        android:src="#dddddd"
        app:layout_constraintRight_toRightOf="@+id/cl_component_navigation_bar_main"
        app:layout_constraintTop_toTopOf="@+id/cl_component_navigation_bar_main" />
</androidx.constraintlayout.widget.ConstraintLayout>
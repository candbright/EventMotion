<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_item_card_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_10"
    app:cardBackgroundColor="@color/color_background_normal"
    app:cardCornerRadius="@dimen/dp_8"
    app:cardElevation="@dimen/dp_6"
    app:cardUseCompatPadding="true"
    tools:context=".common.holder.ImageCardHolder">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_15"
        android:paddingHorizontal="@dimen/dp_15"
        android:orientation="vertical">
        <!-- 512*384 -> 256*192 -> 128*96 -->
        <ImageView
            android:id="@+id/item_card_image"
            app:layout_constraintLeft_toLeftOf="@+id/item_card_container"
            app:layout_constraintTop_toTopOf="@+id/item_card_container"
            app:layout_constraintBottom_toBottomOf="@+id/item_card_container"
            android:layout_width="128dp"
            android:layout_height="@dimen/dp_96" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>